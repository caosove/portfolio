@charset "UTF-8";

*{margin: 0; padding: 0; overflow: hidden;}
*:focus { outline: none; }

#menu{background: transparent; border:none; cursor: pointer;}
#menu{position: absolute; width: 50px; right: 40px; ;top: 18px; z-index:2000; transform: translateX(25px);}
#menu>span{display: block; width: 100%; height: 8px; background: #000; margin: 5px 0 ; border-radius: 10px; transition: all 0.5s;}

#menu>.on:nth-child(1) {transform: translateY(13px) rotate(225deg); transition-delay: 0.2s; }
#menu>.on:nth-child(2) {opacity: 0; transform: translateX(50px);}
#menu>.on:nth-child(3) {transform: translateY(-13px) rotate(-225deg); transition-delay: 0.2s; }
.admin-frame{
	position: absolute;
	top: 0;
	left: 0;
	height: 0px;
	width: 100%;
	z-index:1000;
	background-color: lightgray;
	transition: all 0.3s;
}

.admin-frame-click{
	height: 50%;
	transition: all 0.3s;
	border: 1px solid gray;
}

.admin-login-click{
	min-height: 100%;
	border: 1px solid gray;
}

.admin-login{min-height:100%;}

.fileBox .fileName {display:inline; width:308px; height:30px;margin-right:5px;line-height:30px;background-color:lightgray;vertical-align:middle;overflow:visible; }
.fileBox .btn_file {display:inline-block; width:308px; height:30px;font-size:14px;line-height:30px;text-align:center;vertical-align:middle; background-color: lightgray; overflow:visible; cursor: pointer;}
.fileBox input[type="file"] {clear: both; position:absolute;width:1px;height:1px;padding:0;margin:-1px;overflow:hidden;clip:rect(0,0,0,0);border:0}

.fileBox, .uploadBtn, .fileName{ width: 308px; }
.fileBox, .fileName{
	border: 1px solid black;
}

#excel-input, .previewBtn, .updateBtn {
	display: block;
}

#excel-input{
	width: 310px;
	overflow: visible;
}

.selectType{
	width: 308px;
	height:30px;
	font-size: 14px;
	background-color: lightgray;
	text-align:center;
	line-height:30px;
	border: 1px solid black;
}

.previewBtn, .updateBtn {
	width: 308px;
	height:30px;
	font-size: 14px;
	background-color: lightgray;
	text-align:center;
	line-height:30px;
	border: 1px solid black;
	cursor: pointer;
}

.admin-wrapper{
	display:inline-block;
	float:left;
	width:auto;
	padding:20px 0;
	padding-left: 50px;
	clear: both;
}

.excel-preview {
	display:inline;
	float: right;
	width:70%;
	margin-top:80px;
	margin-right: 100px;
}
.excel-table{
	margin:0 30px;
	border: 1px solid black;
	border-collapse: collapse;
	width: 80%;
	height: 20px;
	overflow:hidden;
	text-overflow: ellipsis;
}
.excel-table tr, .excel-table th, .excel-table td{
	width: auto;
	height: 15px;
	border: 1px solid black;
	border-collapse: collapse;
	overflow:hidden;
	text-overflow: ellipsis;
	text-align: center;
}

.btn_file:hover, .previewBtn:hover, .updateBtn:hover, #loginBtn:hover, #codeBtn:hover{
	background-color: gray;
	color: white;
}

#loadingImg {
	display: none;
	position: relative;
	top: -50px;
	left: 20%;
	background-image: url("/kingsmap/images/load1.gif");
	background-size: contain;
	background-position:center;
	background-repeat: no-repeat;
	width: 400px;
	height: 400px;
}

#login-wrapper {
	clear: both;
	position: relative;
	display:inline-block;
	top: 50%;
	left: 50%;
	width: 300px;
	min-height: 400px;
	-webkit-transform: translate(-150px,-200px);
	-ms-transform: translate(-150px,-200px);
	transform: translate(-150px,-200px);
	background-color: lightgray;
}

#login-form {
	margin: 50px 10px;
	text-align: center;	
}

#login-input{
	margin: auto;
	text-align: center;
	
}

#login-table{
	clear: both;
	width: 100%;
	height: 100%;
	background-color: lightgray;
}
#login-table>td {
	border: 1px solid gray;
	background-color: lightgray;
}

#email, #code, #loginBtn, #codeBtn{
	clear: both;
	width: 100%;
	min-height: 30px;
	background-color: lightgray;
	border: 1px solid gray;
}

#email::placeholder, #code::placeholder {
	color: gray;
	font-size: 14px;
	font-style: italic;
	text-align: right;
	padding-right: 10px;
}

#cnttest, #loginMsg{background-color:lightgray;}


.info-msg{font-size: 13px; color: gray;}

#logout{display: inline-block; height: 100%; border:1px solid gray;}
