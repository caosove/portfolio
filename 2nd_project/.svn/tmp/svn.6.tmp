function addcart(){

}


   
   var sell_price;
   var amount;



   function init () {
      sell_price = document.form.sell_price.value;
      amount = document.form.amount.value;
      document.form.sum.value = sell_price;
      change();
   }

   function add () {
      hm = document.form.amount;
      sum = document.form.sum;
      
      if(hm.value>9){
         alert('10개를 초과하여 구매하실 수 없습니다.');
      }else{
         
         hm.value ++ ;
         sum.value = (parseInt(hm.value) * sell_price).format();
      }
   }

   function del () {
      hm = document.form.amount;
      sum = document.form.sum;
         if (hm.value > 1) {
            hm.value -- ;
            sum.value = (parseInt(hm.value) * sell_price).format();
         }
   }

   function change () {
      hm = document.form.amount;
      sum = document.form.sum;

         if (hm.value < 0) {
            hm.value = 0;
         }
      sum.value = (parseInt(hm.value) * sell_price).format();
   }  
   
   Number.prototype.format = function(){
       if(this==0) return 0;
       var reg=/(\d+)(\d{3})/;
       var n=(this + '');
       while (reg.test(n)) {
          n = n.replace(reg,'$1'+','+'$2');
       }
       return n;
   };
</script>